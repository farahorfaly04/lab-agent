# Lab Platform Device Agent Configuration Example
# Copy this file to config.yaml and customize as needed
# Secrets should be set in .env file, not here

device_id: "lab-device-01"  # Will be overridden by DEVICE_ID in .env
labels: ["lab", "example"]  # Will be overridden by DEVICE_LABELS in .env

# MQTT broker connection
# Credentials will be overridden from .env file for security
mqtt:
  host: "localhost"  # Will be overridden by MQTT_HOST in .env
  port: 1883         # Will be overridden by MQTT_PORT in .env
  username: "mqtt"   # Will be overridden by MQTT_USERNAME in .env
  password: "public" # Will be overridden by MQTT_PASSWORD in .env

# Heartbeat interval in seconds
heartbeat_interval_s: 10  # Can be overridden by HEARTBEAT_INTERVAL_S in .env

# Modules configuration
# Modules will be loaded dynamically from features/ directory
# Configure module-specific settings here
modules: {}

